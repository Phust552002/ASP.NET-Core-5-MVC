@model ASP.NETCore5.Models.EmployeeSortPagingView

@{
    ViewData["Title"] = "SortingPaging";
}

<h1>Sorting Paging</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="SortingPaging" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Id", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex,SortField = "Id", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th>
                    @Html.ActionLink("First Name", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex, SortField = "FirstName", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th>
                    @Html.ActionLink("Last Name", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex, SortField = "LastName", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th>
                    @Html.ActionLink("Email", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex, SortField = "Email", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th>
                    @Html.ActionLink("Age", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex, SortField = "Age", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th>
                    @Html.ActionLink("Created", "SortingPaging", new { CurrentPageIndex = ViewBag.CurrentPageIndex, SortField = "Created", CurrentSortField = ViewBag.CurrentSortField, CurrentSortOrder = ViewBag.CurrentSortOrder })
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                @if (i != Model.CurrentPageIndex)
                {
                    <li class="page-item">
                        @Html.ActionLink(i.ToString(), "SortingPaging", new { CurrentPageIndex = i, SortField = ViewBag.CurrentSortField, SortOrder = ViewBag.CurrentSortOrder }, new { @class = "page-link" })
                    </li>
 }
                else
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i</a>
                    </li>
}}
        </ul>
    </nav>
</form>