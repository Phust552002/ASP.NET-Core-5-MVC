@model ASP.NETCore5.Models.LoginView

@{
    ViewData["Title"] = "Đăng nhập";
}

<h2 class="text-center mt-3">Đăng nhập</h2>
<hr />

<div class="mt-4" style="max-width:400px;margin:auto;">
    <form asp-action="Login" method="post">
        <div class="form-group mb-3">
            <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
            <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-controller="Account" asp-action="Register">Chưa có tài khoản? Đăng ký ngay</a> |
        <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
