@model ASP.NETCore5.Models.LoginView

@{
    ViewData["Title"] = "Đăng nhập";
}

<h2 class="text-center mt-3">Đăng nhập</h2>
<hr />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<form asp-action="Login" method="post" class="mt-4" style="max-width:400px;margin:auto;">
    <div class="form-group mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

    <div class="mt-3 text-center">
        <a asp-controller="Account" asp-action="Register">Chưa có tài khoản? Đăng ký ngay</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
