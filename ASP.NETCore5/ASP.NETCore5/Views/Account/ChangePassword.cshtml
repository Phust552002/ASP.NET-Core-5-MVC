@model ASP.NETCore5.Models.PasswordView
@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>
<hr />

<form asp-action="ChangePassword" method="post" class="w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="CurrentPassword" class="form-label"></label>
        <input asp-for="CurrentPassword" class="form-control" placeholder="Enter current password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter new password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RetypedPassword" class="form-label"></label>
        <input asp-for="RetypedPassword" class="form-control" placeholder="Retype new password" />
        <span asp-validation-for="RetypedPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.Message</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
