@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-5">
    <div class="alert @(ViewBag.Status != null && ViewBag.Status.Contains("succeed") ? "alert-success" : "alert-danger")">
        <h4>@ViewBag.Status</h4>
    </div>

    @if (ViewBag.Status != null && ViewBag.Status.Contains("succeed"))
    {
        <p>Your email has been confirmed successfully.</p>
        <p><a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login now</a></p>
    }
    else
    {
        <p>The confirmation link is invalid or has expired.</p>
    }
</div>
