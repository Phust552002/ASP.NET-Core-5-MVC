@model ASP.NETCore5.Models.ChangeEmailView
@{
    ViewData["Title"] = "Change Email";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewEmail" class="control-label"></label>
                <input asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index">Back to My Profile</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
