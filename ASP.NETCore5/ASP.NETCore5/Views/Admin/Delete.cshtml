@model ASP.NETCore5.Models.AppUser

@{
    ViewData["Title"] = "Xóa người dùng";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <h5>Bạn có chắc chắn muốn xóa người dùng sau không?</h5>
</div>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="List" class="btn btn-secondary">Hủy</a>
    </form>
</div>
